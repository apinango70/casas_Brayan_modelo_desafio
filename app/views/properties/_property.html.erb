<div id="<%= dom_id property %>">
  <p>
    <strong>Name:</strong>
    <%= property.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= property.description %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= property.category.name %>
  </p>
  <p>
    <strong>Feature:</strong>
    <% property.features.each do |item| %>
      <%= content_tag :span, item.name, class: "tag" %>
    <% end %>
  </p>
  <p>
    <strong>User:</strong>
    <%= property.user.email %>
  </p>
</div>
